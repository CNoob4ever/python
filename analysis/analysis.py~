'''
depend on pandas xlrd
'''
import pandas as pd

data = pd.read_excel('红手指游戏数据.xlsx')
data['日期'] = [x.strftime('%Y-%m-%d') for x in data['游戏开始时间']]

date = data['日期'].unique()
for i in date:
    count_per_day = data.count()
    max_duration = data['游戏时长(min)'].max()
    min_duration = data['游戏时长(min)'].min()
    duration = data['游戏时长(min)'].sum()

    table = pd.DataFrame([count_per_day,duration,max_duration,min_duration])

    print(table)

